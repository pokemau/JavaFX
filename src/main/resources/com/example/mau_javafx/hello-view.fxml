<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="pnMain" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mau_javafx.HelloController">
   <children>
      <VBox fx:id="pnLogin" alignment="CENTER" prefHeight="300.0" prefWidth="500.0" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <Label text="Welcome" textFill="#42433a">
            <font>
               <Font name="System Bold" size="35.0" />
            </font>
         </Label>
         <HBox alignment="CENTER" prefWidth="200.0" VBox.vgrow="NEVER">
            <children>

                <Label fx:id="welcomeText" alignment="CENTER" text="User name: " textAlignment="CENTER" textFill="#42433a" HBox.hgrow="ALWAYS" />
               <TextField fx:id="txtUserName" />
            </children>
         </HBox>
         <HBox alignment="CENTER" layoutX="30.0" layoutY="85.0" prefWidth="200.0">
            <children>
               <Label fx:id="welcomeText2" alignment="CENTER" text="Password:   " textAlignment="CENTER" textFill="#42433a" HBox.hgrow="ALWAYS" />
               <PasswordField fx:id="txtPassword" />
            </children>
         </HBox>
         <HBox alignment="CENTER" prefWidth="200.0">
            <children>
               <Button fx:id="signInBtn" mnemonicParsing="false" onAction="#onLogInClick" text="Sign In" textAlignment="CENTER" />
            </children></HBox>
      </VBox>
   </children>
</AnchorPane>
